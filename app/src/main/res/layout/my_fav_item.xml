<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_180"
    android:paddingHorizontal="@dimen/dim_20"
    android:paddingVertical="18dp"
    android:id="@+id/box"
    android:background="@drawable/my_fav_item_back"
    >

    <ImageView
        android:id="@+id/good_image"
        android:layout_width="@dimen/dim_140"
        android:layout_height="@dimen/dim_140"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/good_test" />


    <TextView
        android:id="@+id/good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/good_image"
        android:text="飞利浦（PHILIPS） "
        android:textColor="#ff000000"
        android:textSize="@dimen/dim_sp_20" />


    <LinearLayout
        android:id="@+id/fav_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_name"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_toRightOf="@id/good_image"
       android:background="@drawable/my_fav_item_fav_num">

        <TextView
            android:id="@+id/collectCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="200+人收藏"
            android:textColor="#ff9e99f8"
            android:textSize="@dimen/dim_sp_14" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fav_number"
        android:layout_toEndOf="@id/good_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ffec612a"
            android:textSize="@dimen/dim_sp_14" />

        <TextView
            android:id="@+id/money"
            android:layout_width="62dp"
            android:layout_height="28dp"
            android:text="189.00"
            android:textColor="#ffec612a"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_fav_item_cancel_back">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dim_20"
                android:paddingVertical="@dimen/dp_10"
                android:text="取消收藏"
                android:textColor="#ff000000"
                android:textSize="@dimen/dim_sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_fav_item_look_back"
            android:layout_marginTop="@dimen/dim_sp_10">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dim_20"
                android:paddingVertical="@dimen/dp_10"
                android:text="查看详情"
                android:textColor="#EDA966"
                android:textSize="@dimen/dim_sp_14" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>