<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back1"
    android:id="@+id/box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:padding="22dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C8B8DC"
            app:strokeColor="#00FFFFFF">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血压测量"
                android:textColor="#ff4d4d4d"
                android:textSize="18sp"
               android:paddingVertical="6dp"
                android:paddingHorizontal="22dp"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体检频率"
            android:textColor="#ff4d4d4d"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/physical_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每天"
            android:textColor="#ff6c1985"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间"
            android:textColor="#ff4d4d4d"
            android:textSize="12sp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:0013:0020：00"
            android:textColor="#ff6c1985"
            android:textSize="17sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="#00FFFFFF"
                app:cardBackgroundColor="#8FD2DB"
                app:cardCornerRadius="10dp">


                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改计划"
                    android:textColor="#ff4d4d4d"
                    android:textSize="17sp"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="4dp"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="#00FFFFFF"
                app:cardBackgroundColor="#8E99DC"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="22dp">


                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消提醒"
                    android:textColor="#ff4d4d4d"
                    android:textSize="17sp"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="4dp"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="#00FFFFFF"
                app:cardBackgroundColor="#DC8F8F"
                app:cardCornerRadius="10dp"
               >


                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="彻底删除"
                    android:textColor="#ff4d4d4d"
                    android:textSize="17sp"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="4dp"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>