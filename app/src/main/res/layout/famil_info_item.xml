<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/family_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家属1"
            android:textSize="@dimen/dim_sp_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/family_name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/user_edit_back"
            android:paddingStart="@dimen/dp_10"
            android:textSize="@dimen/dim_sp_14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="联系电话"
            android:textSize="@dimen/dim_sp_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/family_number"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/user_edit_back"
            android:inputType="phone"
            android:paddingStart="@dimen/dp_10"
            android:textSize="@dimen/dim_sp_14"
            />

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:visibility="gone"
            android:src="@drawable/baseline_remove_circle_24"/>

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:visibility="gone"
            android:src="@drawable/add_fil_circle"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>