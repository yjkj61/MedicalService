            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="居住地址"
                android:textSize="@dimen/dim_sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/user_edit_back"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="5dp"
                android:text="点击选择省市区"
                android:textSize="@dimen/dim_sp_14" />

            <EditText
                android:id="@+id/ownerAddress"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/user_edit_back"
                android:hint="请输入详细地址"
                android:paddingStart="10dp"
                android:textSize="@dimen/dim_sp_14" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭护工姓名"
                android:textSize="@dimen/dim_sp_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/owner_nursing_name"
                android:layout_width="@dimen/dim_120"
                android:layout_height="@dimen/dim_30"
                android:layout_marginStart="10dp"
                android:background="@drawable/user_edit_back"
                android:paddingStart="@dimen/dp_10"
