                android:layout_width="@dimen/dim_120"
                android:layout_height="@dimen/dim_30"
                android:layout_marginStart="10dp"
                android:background="@drawable/user_edit_back"
                android:paddingStart="@dimen/dp_10"
                android:textSize="@dimen/dim_sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="联系电话"
                android:textSize="@dimen/dim_sp_16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/owner_doctor_phone"
                android:layout_width="@dimen/dim_180"
                android:layout_height="@dimen/dim_30"
                android:layout_marginStart="10dp"
                android:background="@drawable/user_edit_back"
                android:inputType="phone"
                android:paddingStart="@dimen/dp_10"
                android:textSize="@dimen/dim_sp_14" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dim_14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
