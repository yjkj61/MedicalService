<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    tools:context=".activity.healthcareChildActivity.HealthRecords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:src="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/header"
            android:layout_width="@dimen/dim_60"
            android:layout_height="@dimen/dim_60"
            android:layout_marginStart="@dimen/dim_60"
            android:src="@drawable/nologin_header" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="用户名-1"
            android:textColor="#ff4d4d4d"
            android:textSize="@dimen/bee_top_text" />

        <TextView
            android:id="@+id/switch_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"

            android:background="@drawable/swtich_user_back"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="切换用户"
            android:textColor="#ff4d4d4d"
            android:textSize="@dimen/bee_bottom_text" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageView"
            android:layout_width="230dp"
            android:layout_height="35dp"
            app:cardBackgroundColor="#B8DCBC"
            app:strokeColor="#00FFFFFF"
            android:layout_marginStart="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="影像报告档案"
                android:textColor="#ff4d4d4d"
                android:textSize="15sp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <GridView
        android:id="@+id/grid_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:horizontalSpacing="@dimen/dim_20"
        android:verticalSpacing="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="90dp"/>


</LinearLayout>