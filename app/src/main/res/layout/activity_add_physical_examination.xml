<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:paddingVertical="40dp"

    tools:context=".activity.healthcareChildActivity.physicalExamination.AddPhysicalExamination">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:src="@drawable/add_physical_examination_header_image" />

        <LinearLayout
            android:layout_width="@dimen/dim_400"
            android:layout_height="@dimen/dim_60"
            android:background="@drawable/back2">

            <EditText
                android:id="@+id/name"
                android:layout_width="@dimen/dim_400"
                android:layout_height="@dimen/dim_60"
                android:background="#F2F8F9"
                android:hint="添加检查项目名称"
                android:paddingStart="26dp"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/back2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dim_30"
                android:paddingVertical="6dp"
                android:text="下一步"
                android:textColor="#ff4d4d4d"
                android:textSize="@dimen/dim_sp_20" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>