<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.shopChildView.ShopMyCenter"
    android:paddingTop="20dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/shop_my_center_back">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_left_white"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/header"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>


            <TextView
                android:id="@+id/name_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夏冬海  65岁"
                android:layout_below="@id/header"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/name_age">
                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV3"
                    android:textColor="#ffffffff"
                    android:textSize="22sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4327成长值)"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <GridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingHorizontal="80dp"
                android:paddingTop="80dp"
                android:layout_height="match_parent"
                android:numColumns="4"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/dp_10"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp_10"
            android:paddingHorizontal="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textColor="#ff727272"
                    android:textSize="16sp"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="#ff727272"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:id="@+id/all_order_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"/>
            </LinearLayout>

            <GridView
                android:id="@+id/order_control"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="60dp"
                android:numColumns="4"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>