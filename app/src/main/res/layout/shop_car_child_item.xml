<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/good_info_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp">

        <ImageView
            android:id="@+id/good_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/good_image"
            android:layout_width="@dimen/dim_100"
            android:layout_height="@dimen/dim_100"
            android:layout_marginHorizontal="@dimen/dim_14"
            android:layout_toEndOf="@id/good_check"
            android:src="@drawable/good_test" />

        <TextView
            android:id="@+id/good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/good_image"
            android:text="欧姆龙（OMRON）电子血压计家用上臂式血压仪 HEM-7124"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/good_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_name"
            android:layout_marginVertical="14dp"
            android:layout_toRightOf="@id/good_image"
            android:text="型号：官方套餐；重量：0.59kg"
            android:textColor="#ff58595b"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_info"
            android:layout_alignBaseline="@id/price"
            android:layout_toRightOf="@id/good_image"
            android:text="¥"
            android:textColor="#FFEC612A"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_info"
            android:layout_toRightOf="@id/price_unit"
            android:text="189"
            android:textColor="#FFEC612A"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/good_info"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shop_cart_add_reduce_back">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dim_14">

                <ImageView
                    android:id="@+id/reduce"
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:src="@drawable/baseline_remove_24"
                    app:tint="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FF707070"
                    android:layout_marginStart="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/sp_14"
                    android:paddingVertical="10dp"
                    android:text="1"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FF707070" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/black" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>