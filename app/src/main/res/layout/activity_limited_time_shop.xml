<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dp_40"
    tools:context=".activity.shopChildView.LimitedTimeShop">

    <LinearLayout
        android:id="@+id/top_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFF3F9FF"
            app:cardCornerRadius="0dp"
            app:strokeColor="#FF91C2FF"
            app:strokeWidth="2dp"
            android:layout_marginStart="@dimen/dim_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/shop_search" />

                <EditText
                    android:id="@+id/good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="#00FFFFFF"
                    android:hint="@string/good_keywords"
                    android:textColor="#ff727272"
                    android:textSize="14dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    app:cardBackgroundColor="#FF91C2FF"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="#00FFFFFF">

                    <TextView
                        android:id="@+id/searchBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingHorizontal="18dp"
                        android:paddingVertical="8dp"
                        android:text="@string/search"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <GridView
        android:id="@+id/good_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="5"
        android:paddingStart="30dp"
        android:paddingEnd="80dp"
        android:verticalSpacing="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/top_box" />

</androidx.constraintlayout.widget.ConstraintLayout>