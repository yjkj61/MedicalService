<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.healthcareChildActivity.AiVisitActivity"
    android:orientation="horizontal"
    android:paddingHorizontal="35dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="46dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ai_visit_box_background"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="55dp"
                android:layout_marginStart="95dp"
                android:layout_marginEnd="77dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="31dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回上一页"
                    android:paddingHorizontal="18dp"
                    android:textColor="#ff4d4d4d"
                    android:textSize="25sp"
                   android:background="@drawable/ai_visit_back_background" />

                <Space
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成并提交"
                    android:textColor="#ff4d4d4d"
                    android:paddingHorizontal="18dp"
                    android:background="@drawable/ai_visit_finish_background"
                    android:textSize="25sp"
                    />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:src="@mipmap/ai_visit_file"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/woman_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ai_visit_image_woman"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日AI查访"
                android:textColor="#ff4d4d4d"
                android:textSize="19sp"
                android:background="@drawable/ai_visit_text_background"
                android:paddingHorizontal="13dp"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>